<!DOCTYPE html>
<html lang="en">
#parse("content/base/back/common/head.vm")
<link href="$!{basePath}/plug-in/plugin/hplus/css/style.css" type="text/css" rel="stylesheet"/>
<link href="$!{basePath}/plug-in/plugin/hplus/css/font-awesome.min.css" type="text/css" rel="stylesheet"/>
<body style='overflow:scroll;overflow-x:hidden'>
	<div class="container bs-docs-container" style="width:100%;">
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">
	        	<button type="button" class="btn btn-primary" id="formSubmit"><span class="glyphicon glyphicon-ok"></span> 保存</button>
				<button type="button" class="btn btn-default" id="formReturn" data-dismiss="modal" onclick="doUrl('$!{basePath}/goldeneggs/back/wxActGoldeneggsRelation/list.do?actId=$!{wxActGoldeneggsRelation.actId}')"><span class="glyphicon glyphicon-circle-arrow-left"></span> 返回</button>
				</div>
				<div class="panel-body">
					<form class="form-horizontal" role="form" id="dailogForm" action="$!{basePath}/goldeneggs/back/wxActGoldeneggsRelation/doEdit.do" method="POST">
						 <input type="hidden" id="btn_sub" class="btn_sub" />
						 <input type="hidden" value="$!{wxActGoldeneggsRelation.id}" name="id" id="id" />
													<div class="form-group mno">
														<div class="col-sm-4">
													    <label for="inputEmail3" class="col-sm-4 control-label" style="text-align:left;">奖品总数量</label>
													    <div class="col-sm-8">
													      <input type="text" readonly value="$!{wxActGoldeneggsRelation.amount}" id="amount" class="form-control" />
													    </div>
														</div>
														<div class="col-sm-4">
													    <label for="inputEmail3" class="col-sm-4 control-label" style="text-align:left;">奖品剩余数量</label>
													    <div class="col-sm-8">
													      <input type="text" readonly value="$!{wxActGoldeneggsRelation.remainNum}" id="remainNum" class="form-control" />
													    </div>
														</div>
													</div>
													<div class="form-group mno">
														<div class="col-sm-4">
													    <label for="inputEmail3" class="col-sm-4 control-label" style="text-align:left;">增减后奖品总数量</label>
													    <div class="col-sm-8">
													      <input type="text" style="color:red" readonly name="amount" id="amount1" value="$!{wxActGoldeneggsRelation.amount}"  class="form-control" />
													    </div>
														</div>
														<div class="col-sm-4">
													    <label for="inputEmail3" class="col-sm-4 control-label" style="text-align:left;">增减奖品剩余数量</label>
													    <div class="col-sm-8">
													      <input type="text" style="color:red" readonly name="remainNum" id="remainNum1" value="$!{wxActGoldeneggsRelation.remainNum}"class="form-control" />
													    </div>
														</div>
													</div>
													<div class="form-group mno">
														<div class="col-sm-4">
													    <label for="inputEmail3" class="col-sm-4 control-label" style="text-align:left;">增减数</label>
													    <div class="col-sm-8">
													      <input type="text" id="prizeNum" value="1" class="form-control" />
													    </div>
														</div>
														<div class="col-sm-4">
															<a class="btn btn-info btn-xs" href="javascript:updateProductNum(1)"><i class="fa fa-level-up"></i>增加</a>
															<a class="btn btn-success btn-xs" href="javascript:updateProductNum(2)"><i class="fa fa-level-down"></i> 减少</a>
														</div>
													</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
<script type="text/javascript" src="$!{basePath}/plug-in/js/Validform_v5.3.2.js"></script> 
<script type="text/javascript" src="$!{basePath}/plug-in/js/forminit.p3.js"></script> 
<script >
function updateProductNum(type){
	var prizeNum=$("#prizeNum").val();  //增加数
	var amount1=$("#amount1").val(); //每天数量
	var remainNum1=$("#remainNum1").val();//每天剩余数量
	if(type==1){
		$("#amount1").val(parseInt(amount1)+parseInt(prizeNum));
		$("#remainNum1").val(parseInt(remainNum1)+parseInt(prizeNum));
	}else{
		if(parseInt(remainNum1)-parseInt(prizeNum)<0){
			layeralert("奖品增减后剩余数量不能小于0",0);
		}else{
    		$("#amount1").val(parseInt(amount1)-parseInt(prizeNum));
    		$("#remainNum1").val(parseInt(remainNum1)-parseInt(prizeNum));
		}
	}
}
</script>
