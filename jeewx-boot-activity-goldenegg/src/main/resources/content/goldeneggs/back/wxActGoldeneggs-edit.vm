<script >

function submitForm(){
	var submitFlag=true;
	$('input[name^=awarsList][name$=Name]').each(function(i){
		if(i<2){
    		if(!$(this).val()){
    			layeralert("请先配置奖项和奖品再录入活动",0);
				submitFlag=false;
    			return false;
    		}
		}
	});
	//所有的总概率和不能超过100
	var rate=0;
    $("input[name*='probability']").each(function(){
		rate=parseFloat($(this).val())+rate;
    });
	if((rate-10)>100){
		layeralert("总中奖概率之和不能大于100%！");
		return;
	}
	//开始结束时间判断
	var start=$("#starttime").val();
	var end=$("#endtime").val();
	if(start>end){
		layeralert("开始时间不能大于结束时间！",0);
		return;
	}
	if(submitFlag){
    	var form = $("#dailogForm").Validform();
        form.config({tiptype:4});
    	var flag = form.check();
    	if(flag){
    		parent.layer.confirm('确认提交吗？', {
    		    btn: ['确定','取消'] //按钮
    		}, function(){
    			ajaxdoFormSubmit('dailogForm');
