				var name=$("#username").val();
				var adr=$("#address").val();
				var awards=$("#hidden_awards").val();
				if(name==''){
					alert("请输入收货人姓名");
					return
				}
				if(adr==''){
					alert("请输入收货人地址");
					return
				}
				if(tel==''){
					alert("请输入手机号码");
					return
				}
				var regu=/^[1][3-8]+\d{9}$/;
				var re=new RegExp(regu);
				if(!re.test(tel)){
					alert("请输入正确手机号码");
					return
				}
				var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
				var code=$("#code").val();
				var recordId=$("#recordId").val();
				jQuery.ajax({
		       		url:"../goldeneggs/saveGoldEggPrize.do",
		       		method:"POST",
		       		dataType:"JSON",
		       		data:{mobile:tel,username:name,address:adr,recordId:recordId},
		       		success:function(data){
		       		   if(data.success){
		       		   		alert("提交成功，谢谢参与！");
		       			   	url="../goldeneggs/toGoldenegg.do";
				       location.href= url + "?actId=" + actId + "&jwid=" + jwid + "&openid=" +openid;
		       		   }else{
		       		   		alert(data.msg);
		       		   }
		       		}
		       });
		   });
			
			//再来一次按钮 add by yiming.zhang
			$("#replay-btn").bind("click",function(){
				var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
			    url="../goldeneggs/toGoldenegg.do";
				location.href= url + "?actId=" + actId + "&jwid=" + jwid + "&openid=" +openid;
			});
			$("#replay-btn2").bind("click",function(){
				var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
			    url="../goldeneggs/toGoldenegg.do";
				location.href= url + "?actId=" + actId + "&jwid=" + jwid + "&openid=" +openid;
			});
			
		});
		
		function eggClick(obj) {
			var _this = obj;
				if(_this.hasClass("curr")){
					//alert("感谢参与！");
					return false;
				}
				//_this.unbind('click');
				$(".hammer").css({"top":_this.position().top-55,"left":_this.position().left+185});
				$(".hammer").animate({
					"top":_this.position().top-25,
					"left":_this.position().left+125
					},15,function(){
						_this.addClass("curr"); //蛋碎效果
						_this.find("sup").show(); //金花四溅
						var audio = document.getElementById("hitMusic");
						audio.play();//播放声音
						$(".hammer").hide();	
					}
				);
				//update--begin -----author:scott ---------------date:20150813-------for:进入活动前先不保存参与活动记录,触发金蛋的时候保存
				var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
				jQuery.ajax({
		       		url:"../goldeneggs/toAward.do",
		       		method:"POST",
		       		dataType:"JSON",
		       		async:false,
		       		data:{openid:openid,actId:actId,jwid:jwid},
		       		success:function(data){
		       		  if(data.success){
			       		   if(data.obj=="isPrizes"){
			       		        prize=1;
			       		        $("#prize").val(prize);
			       				prizetype=data.attributes.awardsName;
			       				code=data.attributes.code;
			       				prizeNames=data.attributes.name;
			       				recordId=data.attributes.recordId;
			       				$("#prizetype").val(prizetype);
			       				$("#prizetypes").html(prizetype);
			       				$("#prizename").html(prizeNames);
			       				$("#codes").html(code);
			       				$("#recordId").val(recordId);
			       			}
			       			if(data.obj=="noPrizes"){
			       			   prize=0;
			       			   $("#prize").val(prize);
			       			   $("#result").val("xiexiecanyu");
			       			}	
		       		 }else{
			       		 prize=-1;
			       		 $("#prize").val(prize);
			       		 alert(data.msg);
		       		 }
		       		}
		       });
		       //返回中奖结果
		       $('#resultTip').css({display:'block',top:'100px',left:_this.position().left+45,opacity:0}).animate({top: '50px',opacity:1},300,function(){
							var prize=$("#prize").val();
							if(prize==0){
								$("#result").html("很遗憾您未中奖，请再接再厉!");
									var vv = $("#awardsNum").val()-1;
									var yy=$("#remainNumDay").val()-1;
									 $("#recounts").html(vv);
									 $("#daycounts").html(yy);
									$("#replay-btn2").show();
		
							}else if(prize==1){
								$("#result").html("恭喜中奖啦！请填写领奖信息！");
								$("#infoinput").slideToggle(500);
								 //$("#egg").slideUp(100); 
									var vv = $("#awardsNum").val()-1;
									var yy=$("#remainNumDay").val()-1;
									 $("#recounts").html(vv);
									 $("#daycounts").html(yy);
							}
						});
				//update--begin -----author:scott ---------------date:20150813-------for:进入活动前先不保存参与活动记录,触发金蛋的时候保存
		}
		
		//抽奖次数已用完的情况
		$(".eggList li").click(function() {
				var flag = false;
				var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
				jQuery.ajax({
		       		url:"../goldeneggs/toCheck.do",
