		       		data:{openid:openid,actId:actId,jwid:jwid},
		       		success:function(data){
		       		  if(data.success){
		       		  	flag= true;
			       	  }else if(data.obj=="1"){
			       		alert("今日抽奖次数已用完！");
			       	  }else if(data.obj=="2"){
			       		alert("总抽奖次数已用完！");
			       	  }
					}
				});
			//跳转砸金蛋方法
			if(flag){
				if("$!{subscribeFlage}"=="1"){
					$("#subscript").show();
					return ;
				}
				$(this).children("span").hide();
		        eggClick($(this));
			}
		});
		
