<!DOCTYPE html>
<html lang="en">
#parse("content/base/back/common/head.vm")
<link href="$!{basePath}/plug-in/plugin/hplus/css/style.css" type="text/css" rel="stylesheet"/>
<link href="$!{basePath}/plug-in/plugin/hplus/css/font-awesome.min.css" type="text/css" rel="stylesheet"/>
<style>
.webuploader-pick {
    position: relative;
    display: inline-block;
    cursor: pointer;
    background: #00b7ee;
    padding: 10px 15px;
    color: #fff;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}
</style>
<body style='overflow:scroll;overflow-x:hidden'>
	<div class="container bs-docs-container" style="width:100%;">
		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading" style="34px">
					<button type="button" class="btn btn-primary" id="formSubmit"><span class="glyphicon glyphicon-ok"></span> 保存</button>
					<button type="button" class="btn btn-default" id="formReturn" data-dismiss="modal" onclick="doUrl('$!{basePath}/$!{backurl}')"><span class="glyphicon glyphicon-circle-arrow-left"></span> 返回</button>
					<div style="height:1px;clear:both"></div>
				</div>
					<div class="panel-body">
						<form class="form-horizontal" role="form" id="dailogForm" action="$!{basePath}/system/back/jwSystemActTxt/doAddSeniorActText.do" method="POST">
					  		<table class="table table-striped">
								<thead>
									<th width="20%">项目</th>
									<th width="80%">设置内容</th>
                                </thead>
								<tbody>
									#set($count=0)
									#if($!{jwSystemActTxts})
    									#foreach($!{info} in $!{jwSystemActTxts})
											#if($!{info.type}!="hidden")
											   <!-- 长文本begin -->
												#if($!{info.type}=="longtext")
	            									<tr>
	    												<input type="hidden" name="jwSystemActTxts[$!{count}].id" value="$!{info.id}"/>
	            										<td width="20%">$!{info.discribe}</td>
	            										<td width="80%"><textarea name="jwSystemActTxts[$!{count}].content" id="content" class="form-control" rows="1" datatype="*" style="resize:vertical">$!{info.content}</textarea></td>
	                                                </tr>
											   <!-- 长文本end -->
											   <!-- 图片begin -->
												#elseif($!{info.type}=="img")
												<tr>
														 <input type="hidden"  value="$!{info.id}" name="jwSystemActTxts[$!{count}].id" datatype="*">  
												        <td width="20%">$!{info.discribe}</td>
												        <td width="80%">
														    <input type="hidden" id="img$!{index}"  value="$!{info.content}" name="jwSystemActTxts[$!{count}].content" datatype="*">  
						                           			<img src="$!{info.content}" width="60" height="60"  style="margin-bottom:5px;">  
															<span  onclick="upload(this)" class="btn btn-xs btn-primary" style="height:32px;line-height: 2.5;"><i class="fa fa-exchange"></i> 更换图片</span>  
												        </td>
												</tr>
											   <!-- 图片end -->
											   <!-- 其他begin -->
												#else
	            									<tr>
	    												<input type="hidden" name="jwSystemActTxts[$!{count}].id" value="$!{info.id}"/>
	            										<td width="20%">$!{info.discribe}</td>
	            										<td width="80%"><input name="jwSystemActTxts[$!{count}].content" id="content" class="form-control"  datatype="*"  value="$!{info.content}"/></td>
	                                                </tr>
												#end
											   <!-- 其他end -->
	    										#set($count=$count+1)
											#end
    									#end
									#end
                                </tbody>
                            </table>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<!--弹出框begin-->
<button  data-toggle="modal" data-target=".bs-example-modal-sm" id="pictureButton" style="display:none"></button>
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm" role="document" style="width: 25%;">
    <div class="modal-content" style="height:80%;min-height:385px;">
		<div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
          <h4 class="modal-title" id="myLargeModalLabel">上传图片</h4>
		  <div class="modal-body">
                <div id="uploadify"><span class="glyphicon glyphicon-picture"></span> 选择图片</div>  
			    <div id="pic_view_div" style="width:150px; height:150px;margin-left: 21%;">  
			       <img src="" width="150" height="150" id="pic_view">  
			    </div>  	
		  </div>
		  <div class="modal-footer">
            <a href="javascript:sureUpload()"><button type="button" class="btn btn-primary"><i class="fa fa-check"></i> 确定</button></a>
            <button type="button" class="btn btn-default" data-dismiss="modal" id="close"><i class="fa fa-close"></i> 关闭</button>
		</div>
        </div>
    </div>
  </div>
</div>
<input type="hidden" id="imgSrc" value="" />
<!--弹出框end-->
</body>
</html>
<script type="text/javascript" src="$!{basePath}/plug-in/js/Validform_v5.3.2.js"></script> 
<script type="text/javascript" src="$!{basePath}/plug-in/js/forminit.p3.js"></script> 
<script src="$!{basePath}/plug-in/plugin/webuploader/js/webuploader.js" type="text/javascript"></script>
<script src="$!{basePath}/plug-in/plugin/webuploader/js/webuploaderUtils.js" type="text/javascript"></script>
<link rel="stylesheet" href="$!{basePath}/plug-in/plugin/webuploader/css/webuploader.css" />
<script type="text/javascript">
//上传图片弹出框
var $chose;
function upload(i){
	$chose=i;
	$("#pic_view").attr("src",$($chose).prev("img").attr("src"));
	$("#pictureButton").click();
	$("#uploadify").find("div:nth-child(2)").css("width","100%").css("height","100%");
	$("#imgSrc").val($($chose).siblings("input").val());
}
//实例化上传
var opts={
	url:"$!{basePath}/system/back/jwSystemActTxt/doUpload.do",
};
//回调函数
$("#uploadify").uploader(opts,function(data){
	$("#imgSrc").val(data.obj);  
	$("#pic_view").attr("src",data.obj);
});
//确定
function sureUpload(){
	$($chose).prev("img").attr("src",$("#pic_view").attr("src")); 
	$($chose).siblings("input").val($("#imgSrc").val());
	$("#close").click();
}
</script>