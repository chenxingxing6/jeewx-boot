<script >
//实例化编辑器
var um = UM.getEditor('myEditor');
var opts={
	url:"$!{basePath}/system/back/jwSystemProject/doUpload.do",
	fileSizeLimit:5*1024*1024 //限制上传图片大小为0.5M
};

$("#logo").uploader(opts,function(data){
