});
function check(){
	var type=$("#scType").val();
	if(type=="2"){
		$("#hdzsUrlDiv").show();
		$("#hdzsUrl").attr("datatype","*");
		$("#hdurl").removeAttr("datatype");
		$("#hdurlDiv").hide();
		$("#hdurl").attr("readonly","readonly");
	}else{
		$("#hdzsUrlDiv").hide();
		$("#hdzsUrl").removeAttr("datatype","*");
		$("#hdurl").attr("datatype","*");
		$("#hdurlDiv").show();
		$("#hdurl").removeAttr("readonly");
	}
}
