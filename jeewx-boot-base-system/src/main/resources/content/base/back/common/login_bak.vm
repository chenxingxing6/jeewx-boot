//检测用户名和密码是否正确,检测验证码
function checkUser(){
	var url = "$!{basePath}/system/checkUser.do";
	var username = $("#username").val();
 	var password = $("#password").val();
	var randCode = $("#randCode").val();
	jQuery.ajax({
		url : url,
		type:"post",
		dataType : "json",
	    cache: false,
	    data:{
	      	 username:username
	      	,password:password
			,randCode:randCode
	    },
		success : function(data){
			if(data.success){
			     if(data.obj!=""){
			     	$("#jwid").val(data.obj);
					$("#loginform").submit();
			     }else{
				 	preLogin('$!{basePath}/system/preLogin.do','请选择公众号');
					$("#logintype").val("mm");
				 	//getDefaultJwid();
				 }
			}else{
				//alert(data.msg);
				layeralert(data.msg);
				//$("#randCodeImage").attr("src","$!{basePath}/randCodeImage?v="+new Date().getTime());
			}
		},  
        error: function(data, status, e){  
      		if(data.status == "401"){
				//alert("您没有权限！请联系管理员！");
				layeralert("您没有权限！请联系管理员！");
				return;
			}else{
				//alert("系统异常，请联系管理员！");
				layeralert("系统异常，请联系管理员！");
			}
       }
	});
}

function preLogin(url,title){ 
	if(url.indexOf('?')>-1){
 		url += '&t=' + Math.random(1000);  
 	}else{
 		url += '?t=' + Math.random(1000);  
 	}
 	var username = $("#username").val();
 	var password = $("#password").val();
 	$('#addOrUpdateModalLabel').html(title);
 	$('#addOrUpdateModal .modal-body').html(""); 
	jQuery.ajax({
      url: url,
      cache: false,
      data:{
      	username:username
      	,password:password
      },
	  dataType: "html",
      success: function(data){
        $('#addOrUpdateModal .modal-body').html(data); 
      },  
      error: function(data, status, e){  
      		if(data.status == "401"){
				//alert("您没有权限！请联系管理员！");
      			layeralert("您没有权限！请联系管理员！");
				return;
			}
      }
    });
	$('#addOrUpdateModal').modal({show:true,backdrop:true}); 
}
function submitForm(){
	  var jwid = $("#jwid").val();
      if(jwid==""){
         //alert("请选择公众号");
         layeralert("请选择公众号");
         return;
      }
	  var logintype=$("#logintype").val();
	  if(logintype=="wx"){
	  	wxlogin();
	  }else{
	  	document.getElementById('loginform').submit();
	  }
}

function wxlogin(){
	var jwid = $("#jwid").val();
	if(jwid==""){
		//alert("请选择公众号");
		layeralert("请选择公众号");
		return;
	}
	jQuery.ajax({
		url:"$!{basePath}/system/wxLogin.do",
		type:"POST",
		dataType:"JSON",
		data:{
			jwid:jwid
		},
		success:function(data){
			if(data.success){
				location.href="$!{basePath}/system/login.do"
			}else{
				//alert(data.msg);
				layeralert(data.msg);
			}
		}
	});
}
//获取默认登录的jwid
function getDefaultJwid(){
	var username = $("#username").val();
 	var password = $("#password").val();
	var url = "$!{basePath}/system/getDefaultJwid.do";
	jQuery.ajax({
		url : url,
		type:"post",
		dataType : "json",
	    data:{
	      	 username:username
	      	,password:password
	    },
		success : function(data){
			if(data.success){
