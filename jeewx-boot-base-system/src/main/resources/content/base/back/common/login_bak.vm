function getQrcodeUrl(){
	sceneId="";
	k=0;
	jQuery.ajax({
		url:"$!{basePath}/system/getQrcodeUrl.do",
		type:"POST",
		dataType:"JSON",
		data:{
		},
		success:function(data){
			if(data.success){
				$("#qrcodeUrl").attr("src",data.attributes.qrcodeUrl);
				sceneId=data.attributes.sceneId;
				refreshQrcode();
			}else{
				$("#qrcodeUrl").attr("src","$!{basePath}/content/base/back/common/img/qrcode.jpg");
			}
			$(".tcc_tm_bg").hide();
		}
	});
}
//定时刷新取二维码
function refreshQrcode(){
	if(!sceneId){
		return;
	}
	jQuery.ajax({
		url:"$!{basePath}/system/validateLogin.do",
		type:"POST",
		dataType:"JSON",
		data:{
			sceneId:sceneId
		},
		success:function(data){
			if(data.success){
				if(data.obj=="1"){
					location.href="$!{basePath}/system/login.do";
				}else{
					preLogin('$!{basePath}/system/chooseWeixinId.do','请选择公众号');
					$("#logintype").val("wx");
				}
				$(".tcc_tm_bg").show();
			}else{
				if(data.obj=="error"){
					//二维码失效
				}else{
					setTimeout(function(){
						if(k<90){
							k++;
							refreshQrcode();
						}else{
							$(".tcc_tm_bg").show();
						}
					},500);			
				}
			}
		}
	});
}
