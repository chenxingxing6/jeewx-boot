#parse("content/base/back/common/macro.vm")
<!DOCTYPE html>
<html lang="en">
#parse("content/base/back/common/head.vm")
<link href="$!{basePath}/plug-in/plugin/hplus/css/style.css" type="text/css" rel="stylesheet"/>
<link href="$!{basePath}/plug-in/plugin/hplus/css/font-awesome.min.css" type="text/css" rel="stylesheet"/>
<body style='overflow:scroll;overflow-x:hidden'>
<div class="container bs-docs-container" style="width:100%;">
	<div class="row">
		<form role="form" class="form-inline" action="$!{basePath}/weixin/back/weixinNewstemplate/list.do" method="post"  id="formSubmit">
			<div  class="col-md-10" style="width:100%">
				<div class="panel panel-default">
					<div class="panel-heading">微信图文素材</div>
					<div class="panel-body">
						<div class="search">
							<div class="form-group col-sm-3">
								<label for="templateName" class="control-label col-sm-3 line34">图文名称</label>
								<div class="col-sm-8">
									<input type="text" name="templateName" id="templateName" value="$!{weixinNewstemplate.templateName}" class="form-control">
								</div>
							</div>
							<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span> 搜  索</button>
							<div class="clearfix"></div>
						</div>
						<div id="legend">
							<legend  class="le"><button type="button" class="btn btn-primary" onclick="doUrl('$!{basePath}/weixin/back/weixinNewstemplate/toAdd.do')" ><span class="glyphicon glyphicon-plus"></span> 新增</button></legend> 
						</div>
						<table class="table table-striped">
							<thead>
				        		#*<th width="80px">
				        		 <input type="checkbox" name="ckAll" id="ckAll"  />全选
				        		</th>*#
								<th>图文名称</th>
								##<th>模板类型</th>
								##<th>公众号原始id</th>
								<th>上传状态</th>
								<th>上传时间</th>
								<th>更新时间</th>
								<th>创建时间</th>
								##<th>修改人名称</th>
	                			<th>操作</th>
							</thead>
							<tobody>
								#if($!{pageInfos})
									#foreach($!{info} in $!{pageInfos})
										<tr>		
											##<td><input type="checkbox" name="ck" value="$!{info.id}" /></td>	
											<td>$!{info.templateName}</td>
											##<td>$!{info.templateType}</td>
											##<td>$!{info.jwid}</td>
											<!-- author：sunkai-date：2018-10-08-for：增加上传时间更新时间显示 -->
											<td>
												#if($!{info.uploadType}=='0')
													未上传
												#elseif($!{info.uploadType}=='1')
													上传中
												#elseif($!{info.uploadType}=='2')
													上传成功#if($!{info.uploadStatus}=='1')（<span style="font-weight: bolder;color: red;">有更新<span>）#end
												#else
													上传失败
												#end
											</td>
											<td>$!dateTool.format("yyyy-MM-dd HH:mm:ss",$!{info.uploadTime})</td>
											<td>$!dateTool.format("yyyy-MM-dd HH:mm:ss",$!{info.updateTime})</td>
											<!-- author：sunkai-date：2018-10-08-for：增加上传时间更新时间显示 -->
											<td>$!dateTool.format("yyyy-MM-dd HH:mm:ss",$!{info.createTime})</td>
											##<td>$!dateTool.format("yyyy-MM-dd",$!{info.updateTime})</td>
											<td class="last">
												<a class="btn btn-primary btn-xs" href="javascript:doUrl('$!{basePath}/weixin/back/weixinNewstemplate/toEdit.do?id=$!{info.id}')" ><i class="fa fa-edit"></i> 编辑</a>
												<a class="btn btn-primary btn-xs" target="_blank" href="javascript:addNews('$!{info.id}')"><i class="fa fa-edit"></i> 编辑图文</a>
												<a class="btn btn-danger btn-xs" href="javascript:delData('$!{basePath}/weixin/back/weixinNewstemplate/doDelete.do?id=$!{info.id}')"><i class="fa fa-trash-o"></i> 删除</a><p></p>
												<a class="btn btn-info btn-xs" href="javascript:void(0);" onclick="showModal('news','$!{info.id}')"><i class="fa fa-eye"></i> 本地预览</a>
												#if($!{info.uploadType}=='2')
													<a class="btn btn-info btn-xs"  href="javascript:preview('$!{info.id}')"><i class="fa fa-eye"></i> 手机预览</a>
												#end
												<a class="btn btn-info btn-xs" style="background-color: #337ab7;border-color: #337ab7;border:none" href="javascript:void(0);" onclick="uploadNewstemplate('$!{info.id}')"><i class="fa fa-upload"></i> 上传</a>
											</td>
										</tr>
									#end
								#end
							</tobody>
						</table>
						<div class="text-right">
							<!--公用翻页代码-->
							#set($attr='formSubmit')
							#showPageList($pageInfos $attr)
							<!--END公用翻页代码-->
						</div>
					</div>	
				</div>
			</div>  	
		</form>
	</div>
</div>
<!--本地预览弹出框begin-->
<button  data-toggle="modal" data-target="#myModal" id="myModalButton" style="display:none"></button>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					&times;
				</button>
				<h4 class="modal-title" id="myModalLabel">
					预览
				</h4>
			</div>
			<div class="modal-body" id="modalContent">
				在这里添加一些文本
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> 关闭</button>
			</div>
		</div>
	</div>
</div>
<!--本地预览弹出框begin-->

<!--手机预览弹出框begin-->
<button  data-toggle="modal" data-target=".bs-example-modal-lg" id="openmodel" style="display:none"></button>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document" style="width: 80%;">
    <div class="modal-content" style="height:80%;min-height:550px">
		<div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
          <h4 class="modal-title" id="myLargeModalLabel">用户信息列表</h4>
        </div>
		<div id="modalContent">
			<iframe scrolling="yes" id="showframe" src="" frameborder="0" style="width:100%;height:400px;"></iframe>
		</div>
		<div class="modal-footer">
            <a href="javascript:getCkValue()"><button type="button" class="btn btn-primary"><i class="fa fa-check"></i> 确定</button></a>
			<button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-close"></i> 关闭</button>
		</div>
    </div>
  </div>
</div>
<input type="hidden" id="basePath" value="$!{basePath}">
</body>
</html>
<script type="text/javascript" src="$!{basePath}/content/weixin/js/checkPermission.js"></script>  
<script>
function preview(templateId){
    $("#showframe").attr("src","$!{basePath}/weixin/back/weixinNewstemplate/getUserForTemplatePreview.do?templateId="+templateId);
    $("#openmodel").click();
}

$("#ckAll").click(function(){ 
	if($(this).prop("checked")){ 
	 $(":checkbox").prop("checked",true) 
	}else{ 
	$(":checkbox").prop("checked",false)  
	} 
}); 

//jquery获取复选框值    
function getCkValue(){  
  document.getElementById("showframe").contentWindow.getCkValue();
}    

function addNews(newstemplateId){	
	url="$!{basePath}/weixin/back/weixinNewsitem/goMessage.do?newstemplateId="+newstemplateId;
	window.open(url);
}

//弹出模态窗口
function showModal(msgType,templateId) {
	if(!msgType && !templateId) {
		alert("消息类型或模板ID为空,请验证数据是否正确");
		return false;
	}
	jQuery.ajax({
    	url:"$!{basePath}/weixin/back/weixinCommon/showMoalMessage.do",
    	type:"POST",
    	dataType: "json",
    	data:{
    		msgType:msgType,
    		templateId:templateId
    	},
		success:function(data){
			if("text" == msgType) {
				$("#modalContent").html(data.obj);
			} else if("news" == msgType) {
				var html = "<iframe scrolling=\"yes\" id=\"showframe\" src=\"\" frameborder=\"0\" style=\"width:100%;height:320px;\"></iframe></div>";
				$("#modalContent").html(html);
				var  url = '$!{basePath}/weixin/back/weixinCommon/goMessage.do?newstemplateId='+data.obj;
				$("#showframe").attr("src",url);
			}
			$("#myModalButton").click();
		},
		error:function(data) {
			alert(data.msg);
		}
	});
}

//上传图文素材
function uploadNewstemplate(newstemplateId){
	//var index = layer.alert("正在上传中...");
	var index = layer.msg('正在上传', {icon: 16,shade: 0.01});
	jQuery.ajax({
		url:'$!{basePath}/weixin/back/weixinNewstemplate/uploadNewstemplate.do',
		type:'post',
		dataType:'json',
		data:{
			id:newstemplateId
		},
		success:function(data){
			layer.close(index); 
			layer.open({
              type: 1 //Page层类型
              ,area: ['300px', '100px']
              ,title: '提示'
              ,shade: 0.6 //遮罩透明度
              ,time: 2000
              ,content: '<p align="center" style="margin-top:15px;">'+data.msg+'</p>'
			  ,end: function(){ //此处用于演示
			  	window.location.reload();
              }
            });  
		},
		error:function(data){
		}
	})
}
</script>